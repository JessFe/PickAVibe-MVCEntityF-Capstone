@model PickAVibe.Models.ProfileVM

@{
    ViewBag.Title = Model.Username + "'s Profile";
}


<div class="row justify-content-center">
    <div class="col-md-7 col-xl-6">

        <div class="card mb-3" style="min-height: 50vh;">

            @if (!string.IsNullOrEmpty(Model.FavoriteMovieImageUrl))
            {
                <div class="image-container position-relative overflow-hidden rounded-top-3 banner-cont">
                    <img src="@Url.Content("~/Content/assets/posterimg/" + @Model.FavoriteMovieImageUrl)" alt="Favorite Movie" class="card-img-top position-absolute banner-img" />
                </div>
            }

            <div class="card-body">
                <h4 class="card-title mov-title m-2">@Model.Username's Profile</h4>
                <div class="row justify-content-center my-4">
                    <div class="col-5 my-5">
                        <div class="card card-1 py-2 scale-up">
                            <a href="@Url.Action("Watchlist", "Profile")" class="text-decoration-none">
                                <div class="card-body d-flex flex-column align-items-center">
                                    <p class="text-light text-opacity-75 fs-3 fw-bold text-bg-1 rounded rounded-3 text-center m-0 px-3" style="text-shadow: 0 0 10px var(--cst-2); ">@Model.WatchlistCount</p>
                                    <p class="text-light text-center m-0 mt-2">Watchlist</p>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-5 my-5">
                        <div class="card card-1 py-2 scale-up">
                            <a href="@Url.Action("Watched", "Profile")" class="text-decoration-none">
                                <div class="card-body d-flex flex-column align-items-center">
                                    <p class="text-light text-opacity-75 fs-3 fw-bold text-bg-1 rounded rounded-3 text-center m-0 px-3" style="text-shadow: 0 0 10px var(--cst-2); ">@Model.WatchedCount</p>
                                    <p class="text-light text-center m-0 mt-2">Watched</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PickAVibe</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    @RenderSection("Styles", required: false)

</head>

<body>
    @if (ViewBag.HideLayout != true)
    {
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-dark bg-dark fixed-top">
            <div class="container">
                <a href="@Url.Action("SelectMood", "Movies")" class="navbar-brand me-4">
                    <img src="~/Content/assets/logo.png" alt="PickAVibe Logo" style="height: 27px;" />
                </a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Attiva/Disattiva spostamento" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Start Here", "SelectMood", "Movies", new { area = "" }, new { @class = "nav-link pb-0 mx-2", style = "border-bottom: 1px solid var(--cst-1);" })</li>
                        <li>@Html.ActionLink("Profile", "Index", "Profile", new { area = "" }, new { @class = "nav-link mx-2" })</li>
                        <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link mx-2" })</li>
                        @if (Session["IsAdmin"] != null && (bool)Session["IsAdmin"])
                        {
                            <span class="d-none d-md-block nav-link mx-2"> | </span>
                            <hr class="d-block d-md-none my-2" />
                            <li>@Html.ActionLink("Backoffice", "Index", "Backoffice", new { area = "" }, new { @class = "nav-link mx-2" })</li>
                        }
                        @if (Request.IsAuthenticated)
                        {
                            <li class="ms-md-auto mx-2 mx-md-0">
                                @using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutForm", @class = "nav-link p-0"}))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="nav-link opacity-75" style="background-color: transparent; border: none; color: var(--cst-2-lgt);">Logout</button>
                                }
                            </li>
                        }
                        else
                        {
                            <li class="ms-auto">@Html.ActionLink("Login", "Login", "User", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container body-content d-flex flex-column justify-content-between" style="padding-top: 60px;">
            <div>
                @RenderBody()

            </div>

            <div>

                <hr />
                <footer>
                    <p class="small">&copy; @DateTime.Now.Year - @Html.ActionLink("Pick A Vibe", "About", "Home", new { area = "" }, new { @class = "link-body-emphasis link-offset-2 link-underline-opacity-25 link-underline-opacity-75-hover link-underline-info" })</p>
                </footer>
            </div>

        </div>
    }
    else
    {
        <div class="container body-content">
            @RenderBody()

        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

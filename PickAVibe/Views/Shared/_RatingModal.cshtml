<!-- Modale per la valutazione -->

<div class="modal fade" id="ratingModal" tabindex="-1" role="dialog" aria-labelledby="ratingModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title d-none d-md-block" id="ratingModalLabel">Your vote: yay or nay?</h5>
                <h6 class="modal-title d-block d-md-none" id="ratingModalLabel">Your vote: yay or nay?</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body mx-2">
                <div class="d-flex justify-content-between fs-2">
                    <span><i class="bi bi-emoji-angry"></i></span>
                    <span><i class="bi bi-emoji-neutral"></i></span>
                    <span><i class="bi bi-emoji-heart-eyes"></i></span>
                </div>
                <input type="range" id="movieRating" name="rating" min="0" max="100" value="50" step="5" class="my-4">
                <p>Your rating: <span id="ratingValue">5</span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-1 btn-sm" id="saveRating"><i class="bi bi-check-lg"></i> Save</button>
            </div>
        </div>
    </div>
</div>
